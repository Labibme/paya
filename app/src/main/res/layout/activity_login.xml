<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.sofientouati.olympio.Activities.LoginActivity">

    <RelativeLayout
        android:id="@+id/mainlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView

            android:id="@+id/logoapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/olympio" />

        <TextView
            android:id="@+id/bienvenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Bienvenue"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="invisible" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20sp"
        android:orientation="vertical"
        android:visibility="invisible">

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="Connexion" />

        <Button
            android:id="@+id/signupbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Créer un Compte"
            android:textColor="@android:color/white" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="15sp"
        android:visibility="invisible">
        <!--<TextView-->
        <!--android:id="@id/text"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:textSize="20sp"-->
        <!--android:textStyle="bold"-->
        <!--android:paddingBottom="10sp"-->
        <!--android:textColor="#fff"-->
        <!--android:text="entrer votre numéro de Téléphone "/>-->

        <AutoCompleteTextView

            android:id="@+id/phoneTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/edittext"
            android:hint="Numéro de Télephone"
            android:imeOptions="actionNext"
            android:inputType="phone|textAutoComplete"
            android:nextFocusDown="@+id/logpassTxt"
            android:padding="10sp" />

        <EditText
            android:id="@+id/logpassTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneTxt"
            android:background="@drawable/edittext"
            android:hint="mot de passe"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:padding="10sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signupLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btns"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40sp"
        android:layout_marginLeft="20sp"
        android:layout_marginStart="20sp"
        android:visibility="invisible">

        <!--<TextView-->
        <!--android:id="@+id/text"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:textSize="15sp"-->
        <!--android:textStyle="bold"-->
        <!--android:paddingBottom="10sp"-->
        <!--android:textColor="#fff"-->
        <!--android:text="entrer votre mot de passe"/>-->
        <AutoCompleteTextView
            android:id="@+id/signPhoneTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/edittext"
            android:hint="Numéro de Télephone"
            android:imeOptions="actionNext"
            android:inputType="phone|textAutoComplete"
            android:padding="10sp" />
        <EditText
            android:id="@+id/passTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signPhoneTxt"
            android:background="@drawable/edittext"
            android:hint="mot de passe"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:padding="10sp" />


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/passTxt"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext"
            android:hint="Prénom"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:padding="10sp" />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittext"
            android:hint="Nom"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:padding="10sp" />


    </RelativeLayout>


</RelativeLayout>
